{
    // python
    "python.experiments.enabled": false,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.completeFunctionParens": true,
    "python.languageServer": "Pylance",
    "python.analysis.indexing": true,
    "python.analysis.languageServerMode": "full",
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.regenerateStdLibIndices": true,
    "python.analysis.showOnlyDirectDependenciesInAutoImport": true,
    "python.analysis.persistAllIndices": true,
    "python.analysis.packageIndexDepths": [
        {"name": "", "depth": 7, "includeAllSymbols": true},
    ],
    "python.analysis.userFileIndexingLimit": -1,

    // workbench

    "workbench.tree.indent": 16,
    "workbench.tree.renderIndentGuides": "none",
    "workbench.editor.enablePreview": false,
    "workbench.editor.decorations.badges": false,
    "workbench.list.openMode": "singleClick",
    "workbench.layoutControl.enabled": false,
    "workbench.navigationControl.enabled": false,
    "workbench.panel.showLabels": false,
    "workbench.colorTheme": "Default Light Modern",
     "workbench.colorCustomizations": {
        "gitDecoration.modifiedResourceForeground": "#035389",
    },

    // files
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.encoding": "utf8",
    "files.exclude": {
        "**/.mypy_cache": true,
        "**/.ruff_cache": true,
        "**/.pytest_cache": true,
        "**/__pycache__": true,
        "**/.venv": true,
        "**/.gitlab": true,
        "**/.github": true,
    },

    //terminal
    "terminal.integrated.defaultProfile.linux": "fish",
    "terminal.integrated.enableMultiLinePasteWarning": "never",

    // window
    "window.menuBarVisibility": "compact",
    "window.commandCenter": false,

    // explorer
    "explorer.autoReveal": false,
    "explorer.decorations.badges": false,
    "explorer.compactFolders": true,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmPasteNative": false,

    // editor
    "editor.renderWhitespace": "trailing",
    "editor.comments.ignoreEmptyLines": false,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.cursorBlinking": "solid",
    "editor.fontSize": 16,
    "editor.accessibilitySupport": "on",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.quickSuggestions": {
        "other": "off"
    },

    // gitlens
    "gitlens.showWhatsNewAfterUpgrades": false,
    "gitlens.plusFeatures.enabled": false,

    // accessibility
    "accessibility.signals.terminalQuickFix": {
        "sound": "off",
        "announcement": "auto"
    },
    "accessibility.signals.diffLineInserted": {
        "sound": "off"
    },
    "accessibility.signals.lineHasInlineSuggestion": {
        "sound": "off"
    },
    "accessibility.signals.codeActionApplied": {
        "sound": "off"
    },
    "accessibility.signals.taskCompleted": {
        "sound": "off",
        "announcement": "auto"
    },
    "accessibility.signals.voiceRecordingStarted": {
        "sound": "off"
    },
    "accessibility.signals.voiceRecordingStopped": {
        "sound": "off"
    },
    "accessibility.signals.codeActionTriggered": {
        "sound": "off"
    },
    "accessibility.signals.diffLineModified": {
        "sound": "off"
    },
    "accessibility.signals.terminalBell": {
        "sound": "off",
        "announcement": "auto"
    },
    "accessibility.signals.terminalCommandSucceeded": {
        "sound": "off",
        "announcement": "auto"
    },
    "accessibility.signals.onDebugBreak": {
